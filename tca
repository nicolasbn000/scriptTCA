CREATE VIEW vw_lancamentos AS
SELECT 
    f.id_filme,
    f.titulo,
    f.ano_publicacao,
    f.diretor,
    f.sinopse,
    f.capa,
    f.duracao,
    c.nome_categoria,
    COUNT(fav.usuario_fk) as total_favoritos,
    COUNT(w.usuario_fk) as total_watchlist,
    COUNT(r.id_review) as total_reviews,
    COALESCE(AVG(r.nota), 0) as nota_media
FROM tca_filme f
INNER JOIN tca_categoria c ON f.categoria_fk = c.id_categoria
LEFT JOIN tca_favoritos fav ON f.id_filme = fav.filme_fk AND fav.ativo = TRUE
LEFT JOIN tca_watchlist w ON f.id_filme = w.filme_fk AND w.ativo = TRUE
LEFT JOIN tca_review r ON f.id_filme = r.filme_fk AND r.ativo = TRUE
WHERE f.ativo = TRUE
GROUP BY f.id_filme, f.titulo, f.ano_publicacao, f.diretor, f.sinopse, f.capa, f.duracao, c.nome_categoria
ORDER BY f.id_filme DESC
LIMIT 10;

CREATE VIEW vw_filmes_populares AS
SELECT 
    f.id_filme,
    f.titulo,
    f.ano_publicacao,
    f.diretor,
    f.sinopse,
    f.capa,
    c.nome_categoria,
    COUNT(fav.usuario_fk) as total_favoritos,
    COUNT(w.usuario_fk) as total_watchlist,
    COUNT(r.id_review) as total_reviews,
    COALESCE(AVG(r.nota), 0) as nota_media
FROM tca_filme f
INNER JOIN tca_categoria c ON f.categoria_fk = c.id_categoria
LEFT JOIN tca_favoritos fav ON f.id_filme = fav.filme_fk AND fav.ativo = TRUE
LEFT JOIN tca_watchlist w ON f.id_filme = w.filme_fk AND w.ativo = TRUE
LEFT JOIN tca_review r ON f.id_filme = r.filme_fk AND r.ativo = TRUE
WHERE f.ativo = TRUE
GROUP BY f.id_filme, f.titulo, f.ano_publicacao, f.diretor, f.sinopse, f.capa, f.duracao, c.nome_categoria
ORDER BY total_favoritos DESC
LIMIT 10;

CREATE VIEW vw_reviews_recentes AS
SELECT 
    r.id_review,
    r.comentario,
    r.nota,
    u.nome_usuario,
    u.foto_perfil,
    f.titulo as filme_titulo,
    f.capa as filme_capa,
    c.nome_categoria as categoria_filme,
    f.id_filme
FROM tca_review r
INNER JOIN tca_usuario u ON r.usuario_fk = u.id_usuario
INNER JOIN tca_filme f ON r.filme_fk = f.id_filme
INNER JOIN tca_categoria c ON f.categoria_fk = c.id_categoria
WHERE r.ativo = TRUE AND u.ativo = TRUE AND f.ativo = TRUE
ORDER BY r.id_review DESC
LIMIT 5;

DELIMITER //
CREATE PROCEDURE sp_buscar_filmes_por_categoria(IN categoria_nome VARCHAR(45))
BEGIN
    SELECT f.titulo, f.ano_publicacao, f.diretor, f.sinopse, c.nome_categoria
    FROM tca_filme f
    INNER JOIN tca_categoria c ON f.categoria_fk = c.id_categoria
    WHERE c.nome_categoria = categoria_nome AND f.ativo = TRUE
    ORDER BY f.titulo;
END //
DELIMITER ;

DELIMITER //
CREATE PROCEDURE sp_adicionar_favorito(IN usuario_id INT, IN filme_id INT)
BEGIN
    INSERT INTO tca_favoritos (usuario_fk, filme_fk, data_adicao)
    VALUES (usuario_id, filme_id, NOW())
    ON DUPLICATE KEY UPDATE ativo = TRUE, data_adicao = NOW();
END //
DELIMITER ;

DELIMITER //
CREATE PROCEDURE sp_adicionar_watchlist(IN usuario_id INT, IN filme_id INT)
BEGIN
    INSERT INTO tca_watchlist (usuario_fk, filme_fk, data_adicao)
    VALUES (usuario_id, filme_id, NOW())
    ON DUPLICATE KEY UPDATE ativo = TRUE, data_adicao = NOW();
END //
DELIMITER;

ALTER TABLE tca_filme
ALTER COLUMN capa_filme SET DEFAULT 'default.png';

UPDATE tca_filme
SET capa_filme = REPLACE(capa_filme, '.jpg', '.png')
WHERE capa_filme LIKE '%.jpg';

ALTER TABLE tca_filme
CHANGE notaMedia nota_media DECIMAL(3,1);

