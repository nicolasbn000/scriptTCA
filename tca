DROP VIEW IF EXISTS vw_lancamentos;
DROP VIEW IF EXISTS vw_filmes_populares;
DROP VIEW IF EXISTS vw_reviews_recentes;

DROP TABLE IF EXISTS tca_review;
DROP TABLE IF EXISTS tca_watchlist;
DROP TABLE IF EXISTS tca_favoritos;
DROP TABLE IF EXISTS tca_filme;
DROP TABLE IF EXISTS tca_categoria;
DROP TABLE IF EXISTS tca_usuario;

CREATE TABLE tca_usuario (
    id_usuario INT PRIMARY KEY AUTO_INCREMENT,
    nome_usuario VARCHAR(45) NOT NULL UNIQUE,
    email VARCHAR(45) NOT NULL UNIQUE,
    senha VARCHAR(100) NOT NULL,
    foto_perfil VARCHAR(300) DEFAULT 'default_avatar.png',
    biografia TEXT,
    ativo BOOLEAN DEFAULT TRUE
);

CREATE TABLE tca_categoria (
    id_categoria INT PRIMARY KEY AUTO_INCREMENT,
    nome_categoria VARCHAR(45) NOT NULL UNIQUE,
    ativo BOOLEAN DEFAULT TRUE
);

CREATE TABLE tca_filme (
    id_filme INT PRIMARY KEY AUTO_INCREMENT,
    titulo VARCHAR(100) NOT NULL,
    ano_publicacao INT,
    diretor VARCHAR(100),
    sinopse MEDIUMTEXT,
    elenco MEDIUMTEXT,
    capa VARCHAR(300) DEFAULT 'default_poster.jpg',
    categoria_fk INT NOT NULL,
    notaMedia DECIMAL(3,1) DEFAULT 0.0,
    ativo BOOLEAN DEFAULT TRUE,
    FOREIGN KEY (categoria_fk) REFERENCES tca_categoria(id_categoria)
);

CREATE TABLE tca_favoritos (
    usuario_fk INT NOT NULL,
    filme_fk INT NOT NULL,
    ativo BOOLEAN DEFAULT TRUE,
    PRIMARY KEY (usuario_fk, filme_fk),
    FOREIGN KEY (usuario_fk) REFERENCES tca_usuario(id_usuario) ON DELETE CASCADE,
    FOREIGN KEY (filme_fk) REFERENCES tca_filme(id_filme) ON DELETE CASCADE
);

CREATE TABLE tca_watchlist (
    usuario_fk INT NOT NULL,
    filme_fk INT NOT NULL,
    ativo BOOLEAN DEFAULT TRUE,
    PRIMARY KEY (usuario_fk, filme_fk),
    FOREIGN KEY (usuario_fk) REFERENCES tca_usuario(id_usuario) ON DELETE CASCADE,
    FOREIGN KEY (filme_fk) REFERENCES tca_filme(id_filme) ON DELETE CASCADE
);

CREATE TABLE tca_review (
    id_review INT PRIMARY KEY AUTO_INCREMENT,
    usuario_fk INT NOT NULL,
    filme_fk INT NOT NULL,
    comentario TEXT NOT NULL,
    nota DECIMAL(3,1) CHECK (nota >= 0 AND nota <= 5),
    ativo BOOLEAN DEFAULT TRUE,
    FOREIGN KEY (usuario_fk) REFERENCES tca_usuario(id_usuario) ON DELETE CASCADE,
    FOREIGN KEY (filme_fk) REFERENCES tca_filme(id_filme) ON DELETE CASCADE,
    UNIQUE KEY unique_review (usuario_fk, filme_fk)
);

